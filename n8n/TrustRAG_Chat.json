      {
        "parameters": {
          "jsCode": "const auth = $('Validate Auth').first().json;\nconst requested = $('Extract Request').first().json.category;\nconst cats = auth.categories || [];\n\nif (auth.role === 'super_admin') {\n  const cat = cats.find(c => c.name === requested || (c.table_name||'').includes(requested)) || cats[0] || { name: requested, table_name: requested };\n  return [{ json: { ...auth, selected_category: cat } }];\n}\n\nconst allowed = cats.find(c => c.name === requested || (c.table_name||'').includes(requested));\nif (!allowed) {\n  return [{ json: { ...auth, error: 'Category access denied' } }];\n}\nreturn [{ json: { ...auth, selected_category: allowed } }];"
